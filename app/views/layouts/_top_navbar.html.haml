
%nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
  = link_to "Online Course", root_path, class: 'navbar-brand'
  %button.navbar-toggler{"aria-controls" => "navbarNavAltMarkup", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarNavAltMarkup", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  #navbarNavAltMarkup.collapse.navbar-collapse
    .navbar-nav
      = link_to "Home", root_path, class: 'nav-item nav-link active'
      -if current_user.present? and current_user.role == "Instructor"
        = link_to "My Courses", courses_path, class: 'nav-item nav-link active'
        = link_to "Groups", groups_path, class: 'nav-item nav-link active'
        = link_to "Projects", projects_path, class: 'nav-item nav-link active'
        = link_to "Users", users_path, class: 'nav-item nav-link active'

    .ul.ml-auto
      - if current_user.present?
        = link_to "Logout", destroy_user_session_path, method: :delete, class: 'nav-item nav-link text-white'
      - else
        .row
          = link_to "Login", new_user_session_path, class: 'nav-item nav-link text-white'
          = link_to "Sign up", new_user_registration_path, class: 'nav-item nav-link text-white'
        

.row
  .col-4
    =form_for (@group) do |f|
      .form-group
        =f.label :name
        =f.text_field :name, class: 'form-control'
      -# .form-group
      -#   =f.label "Select Course"
      -#   =f.select :course, options_for_select(Course.where(user_id: current_user.id).map{ |g| [g.name, g.id]}), {include_blank: 'Select Course'},{ class: 'form-control'}
      -if params[:add_marks] == "true"
        .form-group
          =f.label "Score"
          =f.text_field :score, class: 'form-control'
      .form-group
        =f.submit "Create", class: 'btn btn-primary-outline'